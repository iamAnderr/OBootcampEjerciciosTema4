public class Ejercicio_1 {
    public static void main(String args[]) {
        int numeroIf = 0;
        
        if (numeroIf > 0) {
            System.out.println("La varieable es Positiva");
        } 
        else if (numeroIf < 0) {
            System.out.println("La varieable es Negativa");
        }
        else {
            System.out.println("La varieable es Cero");
        }
    }
}
